<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="AWIC Community and Social Services provides settlement and employment services, 
          as well as training & volunteer opportunities for newcomers to Canada. We provide them with the tools to 
          integrate and participate in Canadian society while maintaining their ethnic heritage. We are a non-profit, 
          non-political, secular, multi-lingual, multi-cultural organization that has been assisting newcomers for 
          over 35 years. ">
    <meta name="keywords" content="AWIC social services, newcomers, immigrants, new to Canada, womens services, 
        seniors programs, counseling, support, individual development, employment services, social services, 
        training, volunteer opportunities, non profit">
    <title>AWIC Community and Social Services</title>
    @Styles.Render("~/bundles/generalcss")
    @Styles.Render("~/bundles/hbcalcss")
    @Styles.Render("~/bundles/photoswipecss")
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function(){
            // Toggle drop down menu when mobile button is clicked
            $('#mobile-button').click(function(){
                $('#mobile-menu').toggle({ display: "toggle" });
            });

            // Hack for hash scrolling not working
            if (window.location.hash.length > 0) {
                setTimeout(function () {
                    $('html, body').animate({
                        scrollTop: $(window.location.hash).offset().top
                    }, 1000);
                }, 500);
            }
        });
    </script>
    <!-- Semantic HTML5 Support on old IE -->
    <!--[if IE]>
    <script src="https://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <header class="main">
        <div class="center">
            <div class="logo"><a href="@Url.Action("Index","Home")"></a></div>
            <!-- Navigation -->
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("About","Home")">About</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li><a href="@Url.Action("Index", "Home")#awicevents">Events</a></li>
                    <li><a href="@Url.Action("Index", "Gallery")">Gallery</a></li>
                    <li><a href="@Url.Action("SignUp", "Member")">Become a Member / Patron</a></li>
                    <li><a href="@Url.Action("Apply", "Volunteer")">Volunteer</a></li>
                    <li><a href="@Url.Action("Donate", "Donations")">Donate</a></li>
                </ul>
            </nav>
            <div id="mobile-button"></div>
            <div id="mobile-menu">
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li><a href="@Url.Action("Index", "Home")#awicevents">Events</a></li>
                    <li><a href="@Url.Action("Index", "Gallery")">Gallery</a></li>
                    <li><a href="@Url.Action("SignUp", "Member")">Become a Member / Patron</a></li>
                    <li><a href="@Url.Action("Apply", "Volunteer")">Volunteer</a></li>
                    <li><a href="@Url.Action("Donate", "Donations")">Donate</a></li>
                </ul>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <div class="line">
            <div class="center cf">
                <div class="links">
                    <a href="@Url.Action("About", "Home")">About Us</a>
                    <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                    <a href="@Url.Action("Partners", "Home")">Partners</a>
                    <a href="@Url.Action("Sponsors", "Home")">Sponsors</a>
                    <a href="@Url.Action("Funders", "Home")">Funders</a>
                    <a href="@Url.Action("Careers", "Home")">Careers</a>
                </div>
                <div class="copy">© @DateTime.Now.AddHours(3.0).Year  All rights reserved. <span>AWIC</span> </div>
            </div>
        </div>
    </footer>
</body>
</html>