@model AWIC.Models.Member

@{
    ViewBag.Title = "Membership / Patronage Sign Up";
}

<section id="awic-membership-sign-up-title" class="title-center top-page-nav">
    <div class="center cf">
        <h2>@ViewBag.Title</h2>
    </div>
</section>
<section id="awic-membership-sign-up-body" class="secondary-body">
    <div class="linetext">
        <div class="center">
            <p>
                Becoming a member / patron of AWIC allows you to become an active participant in our core principle, which is to strengthen
                and empower the lives of new community members integrating into Canadian life. Your membership/patronship will help sustain
                and enhance AWIC resources that are available to individuals, newcomer families and the community at large. As a member,
                you will be entitled to benefits such as: 
            </p>
            <div class="list">
                <ul>
                    <li>Stand for nomination for the Board of Directors</li>
                    <li>Voting privileges at the Annual General Meeting</li>
                    <li>Discount on some of AWIC's events</li>
                    <li>Low cost advertising in AWIC's newsletter</li>
                    <li>Receive AWIC's newsletter</li>
                    <li>Become connected to your community</li>
                </ul>
            </div>
            <p></p>
            <p>
                For more information regarding membership, you can email us at @AWIC.Models.User.ADMIN, or call Nilani Nanthan (our office
                assistant) at (416) 499-4144.
            </p>
        </div>
    </div>
    <div class="center cf">
        <div class="col-12">
            <div id="fill-form-message">
                <strong>Please fill in and submit the following form to sign up as a member / patron of AWIC</strong>
                <span class="form-instruction">(fields with an asterisk (*) are required)</span>
            </div>
            <div class="form-center">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <table>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MembershipType)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group text-center">
                                    @Html.EnumDropDownListFor(model => model.MembershipType)
                                    @Html.ValidationMessageFor(model => model.MembershipType, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstName)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.FirstName)
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LastName)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.LastName)
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Address, new { htmlattributes = new { placeholder = "123 Example Street" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.City)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.City)
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProvinceOrState)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.ProvinceOrState)
                                    @Html.ValidationMessageFor(model => model.ProvinceOrState, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Country)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Country)
                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostalCode)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.PostalCode)
                                    @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Phone)*
                                    <span class="form-instruction">(best phone number to reach you)</span>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Phone, new { htmlattributes = new { placeholder = "(999) 999-9999" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EmailAddress)*
                                    <span class="form-instruction">(for instant information from AWIC)</span>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.EmailAddress)
                                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ReferredBy)
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.ReferredBy)
                                    @Html.ValidationMessageFor(model => model.ReferredBy, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FeeOption)*
                                    <span class="form-instruction">(1 year spans from January 1st to December 31st of the corresponding year)</span>
                                </div>
                            </td>
                            <td>
                                <div class="form-group text-center">
                                    @Html.EnumDropDownListFor(model => model.FeeOption)
                                    @Html.ValidationMessageFor(model => model.FeeOption, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PaymentMethod)*
                                </div>
                            </td>
                            <td>
                                <div class="form-group text-center">
                                    @Html.EnumDropDownListFor(model => model.PaymentMethod)
                                    @Html.ValidationMessageFor(model => model.PaymentMethod, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                    </table>

                    <div class="form-group text-center">
                        <input type="submit" value="Sign Up" />
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="push"></div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}