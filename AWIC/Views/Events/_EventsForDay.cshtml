@model IEnumerable<AWIC.Models.Event>

@if (Model.Count() > 0)
{
    <h3>@Model.ElementAt(0).EventDateAndTime.ToLongDateString()</h3>
    <table>
        @foreach (AWIC.Models.Event e in Model)
        {
            <tr>
                <td class="event-time">
                    @if (!e.AllDay)
                    {
                        <span>@e.EventDateAndTime.ToShortTimeString()</span>
                    }
                    else
                    {
                        <span>All Day</span>
                    }
                </td>
                <td class="event-description">@e.EventDescription</td>
            </tr>
        }
    </table>
}