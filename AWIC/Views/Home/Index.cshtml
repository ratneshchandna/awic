<section class="pics">
    <div class="center cf">
        <h2>Gallery</h2>
        <div class="col-12">
            <div class="pics-container">
                @{
                    foreach (string file in ViewBag.Files)
                    {
                        <div class="pic">
                            <img height="200" src="~/Content/gallery/@Path.GetFileName(file)" />
